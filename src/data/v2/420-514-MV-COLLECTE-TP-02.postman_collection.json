		{
			"name": "1. Authentication Setup",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"type": "text/javascript",
						"exec": [
							"// Auto-authenticate if tokens are missing",
							"const baseUrl = pm.collectionVariables.get('baseUrl') || 'http://localhost:3000';",
							"",
							"// Check if admin token is needed and missing",
							"const authHeader = pm.request.headers.get('Authorization');",
							"const needsAdminToken = authHeader && authHeader.includes('{{adminToken}}');",
							"const adminToken = pm.collectionVariables.get('adminToken');",
							"",
							"if (needsAdminToken && !adminToken) {",
							"    console.log('üîê Auto-authenticating as admin...');",
							"    pm.sendRequest({",
							"        url: baseUrl + '/api/v2/auth/login',",
							"        method: 'POST',",
							"        header: { 'Content-Type': 'application/json' },",
							"        body: {",
							"            mode: 'raw',",
							"            raw: JSON.stringify({ email: 'admin@example.com', password: 'password' })",
							"        }",
							"    }, function (err, res) {",
							"        if (!err && res.code === 200) {",
							"            const jsonData = res.json();",
							"            if (jsonData && jsonData.token) {",
							"                pm.collectionVariables.set('adminToken', jsonData.token);",
							"                console.log('‚úÖ Admin token auto-set');",
							"            }",
							"        }",
							"    });",
							"}",
							"",
							"// Check if user token is needed and missing",
							"const needsUserToken = authHeader && authHeader.includes('{{token}}');",
							"const userToken = pm.collectionVariables.get('token');",
							"",
							"if (needsUserToken && !userToken) {",
							"    console.log('üîê Auto-authenticating as user...');",
							"    pm.sendRequest({",
							"        url: baseUrl + '/api/v2/auth/login',",
							"        method: 'POST',",
							"        header: { 'Content-Type': 'application/json' },",
							"        body: {",
							"            mode: 'raw',",
							"            raw: JSON.stringify({ email: 'user@example.com', password: 'password' })",
							"        }",
							"    }, function (err, res) {",
							"        if (!err && res.code === 200) {",
							"            const jsonData = res.json();",
							"            if (jsonData && jsonData.token) {",
							"                pm.collectionVariables.set('token', jsonData.token);",
							"                console.log('‚úÖ User token auto-set');",
							"            }",
							"        }",
							"    });",
							"}"
						]
					}
				}
			],
			"item": [
				{
					"name": "Login Admin (Get Token)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"if (pm.response.code === 200) {",
									"    try {",
									"        const jsonData = pm.response.json();",
									"        console.log('Login response:', JSON.stringify(jsonData, null, 2));",
									"        ",
									"        if (jsonData && jsonData.token) {",
									"            const tokenValue = jsonData.token;",
									"            pm.collectionVariables.set('adminToken', tokenValue);",
									"            console.log('‚úÖ Admin token successfully set:', tokenValue.substring(0, 30) + '...');",
									"            ",
									"            pm.test('Admin token extracted and saved', function () {",
									"                pm.expect(tokenValue).to.be.a('string');",
									"                pm.expect(tokenValue.length).to.be.above(0);",
									"            });",
									"            ",
									"            // Verify token was actually saved",
									"            const savedToken = pm.collectionVariables.get('adminToken');",
									"            if (savedToken === tokenValue) {",
									"                console.log('‚úÖ Token verified in collection variables');",
									"            } else {",
									"                console.error('‚ùå Token not saved correctly!');",
									"            }",
									"        } else {",
									"            console.error('‚ùå No token found in response. Response keys:', Object.keys(jsonData || {}));",
									"            pm.test('Token should exist in response', function () {",
									"                pm.expect(jsonData.token).to.exist;",
									"            });",
									"        }",
									"    } catch (error) {",
									"        console.error('‚ùå Error parsing response or setting token:', error.message);",
									"        console.error('Response body:', pm.response.text());",
									"        pm.test('Response should be valid JSON with token', function () {",
									"            pm.expect(error).to.not.exist;",
									"        });",
									"    }",
									"} else {",
									"    console.error('‚ùå Login failed with status:', pm.response.code);",
									"    console.error('Response:', pm.response.text());",
									"}"
								],
								"type": "text/javascript"
							}
